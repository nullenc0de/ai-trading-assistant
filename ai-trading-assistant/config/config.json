        },
        "calendar": {
            "holidays": [],
            "half_days": [],
            "special_events": []
        },
        "testing_mode": {
            "enabled": false,
            "override_market_hours": false,
            "scan_interval": 60
        }
    },

    "trading": {
        "filters": {
            "min_price": 5.00,
            "max_price": 100.00,
            "min_volume": 500000,
            "min_rel_volume": 2.0,
            "max_spread_percent": 0.02,
            "min_atr": 0.20,
            "exclude_sectors": ["Cryptocurrencies"],
            "exclude_exchanges": ["OTC", "PINK"]
        },
        "rules": {
            "entry": {
                "min_setup_confidence": 85,
                "min_reward_risk_ratio": 3.0,
                "require_volume_confirmation": true,
                "require_trend_alignment": true,
                "min_distance_from_vwap": 0.02
            },
            "exit": {
                "use_trailing_stops": true,
                "time_based_exit": true,
                "max_hold_time_hours": 48,
                "max_adverse_excursion": 0.02,
                "profit_taking": {
                    "enable_partial_exits": true,
                    "first_target_multiplier": 1.5,
                    "final_target_multiplier": 3.0
                }
            },
            "indicators": {
                "min_adx": 20,
                "max_rsi": 70,
                "min_rsi": 30,
                "volume_ma_periods": 20
            }
        }
    },

    "system": {
        "scan_interval": 60,
        "max_symbols": 100,
        "parallel_analysis": true,
        "analysis_timeout": 30,
        "cache_duration": 300,
        "debug_mode": false,
        "log_level": "INFO",
        "performance_tracking": {
            "log_dir": "logs/performance",
            "metrics_update_interval": 60,
            "save_charts": true
        }
    },

    "authentication": {
        "robinhood": {
            "credentials_file": "config/robinhood_auth.json",
            "settings": {
                "max_retries": 3,
                "timeout": 30,
                "debug_mode": false
            }
        }
    },

    "llm": {
        "model": "llama3:latest",
        "temperature": 0.2,
        "max_tokens": 300,
        "retry_attempts": 3,
        "retry_delay": 1,
        "timeout": 10
    },

    "alerts": {
        "enable_notifications": true,
        "notification_types": {
            "trade_entry": true,
            "trade_exit": true,
            "stop_hit": true,
            "target_hit": true,
            "error": true
        },
        "notification_channels": {
            "console": true,
            "log": true,
            "webhook": false
        }
    },

    "strategy_adjustments": {
        "learning_mode": {
            "enabled": true,
            "min_trades_before_adjust": 20,
            "performance_review_interval": 24,
            "auto_adjust_parameters": true
        },
        "market_conditions": {
            "high_volatility": {
                "increase_position_size": false,
                "tighten_stops": true,
                "reduce_hold_time": true
            },
            "low_volatility": {
                "decrease_position_size": true,
                "widen_stops": false,
                "extend_hold_time": true
            }
        }
    },

    "recovery_mode": {
        "enable_recovery_mode": true,
        "activation_threshold_percent": -5.0,
        "position_size_reduction": 50,
        "min_reward_risk_increase": 1.0,
        "auto_disable_threshold": 0.0
    }
