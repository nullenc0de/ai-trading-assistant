                "max_position_percent": 30.0,
                "preferred_share_increment": 10
            },
            "limits": {
                "max_daily_loss_percent": 5.0,
                "max_positions": 5,
                "max_sector_percent": 40.0
            },
            "scaling": {
                "scale_out_levels": [
                    {"percent_gain": 1.0, "exit_size": 0.3},
                    {"percent_gain": 2.0, "exit_size": 0.3},
                    {"percent_gain": 3.0, "exit_size": 0.4}
                ]
            }
        }
